<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="jimihua.work.music_list">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:hint="songname"
        android:textSize="10pt"
        android:id="@+id/music_list_songname_like"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/music_list_songname_like"
        android:id="@+id/linearLayout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textSize="7pt"
            android:hint="singername"
            android:id="@+id/music_list_singername_like"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textSize="7pt"
            android:hint="songduration"
            android:layout_marginLeft="10dp"
            android:id="@+id/music_list_songduration_like"
            />

    </LinearLayout>

</RelativeLayout>
