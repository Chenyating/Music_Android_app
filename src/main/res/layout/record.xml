<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:gravity="center_horizontal"
    >

    <RelativeLayout
        android:id="@+id/voice_layout"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        android:layout_width="125dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content"
        android:paddingLeft="13dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/selector_chat_send_msg_item_bg"
        >

        <TextView
            android:id="@+id/chat_tv_voice_len"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/white"
            android:textSize="16dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"

            />

        <ImageView
            android:id="@+id/iv_voice_image"
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:background="@drawable/chat_sound_item"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="6dp"
            android:visibility="visible"
            />
        <ImageView
            android:id="@+id/iv_voice_image_anim"
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:background="@drawable/chat_voice_send_anim"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="6dp"
            android:visibility="gone"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="bottom"
        android:id="@+id/record_layout"
        android:paddingBottom="40dp"
        >
        <ImageView
            android:id="@+id/chat_record"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/record"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:visibility="visible"
            />

        <ImageButton
            android:id="@+id/honghua"
            android:layout_toRightOf="@+id/chat_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/red"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="50dp"
            />
        <ImageButton
            android:id="@+id/huanghua"
            android:layout_toLeftOf="@+id/chat_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/yellow"
            android:layout_marginTop="60dp"
            android:layout_marginRight="50dp"
            />
        <TextView
            android:id="@+id/chat_tv_sound_notice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="按住说话"
            android:textColor="#000"
            android:textSize="16dp"
            android:layout_below="@+id/chat_record"
            android:layout_marginTop="12dp"
            android:visibility="visible"
            />

        <LinearLayout
            android:id="@+id/chat_tv_sound_length_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="15dp"
            android:visibility="visible"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/anim_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/anthoranim"
                />

            <TextView
                android:visibility="visible"
                android:id="@+id/chat_tv_sound_length"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="12dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="#000"

                />

            <ImageView
                android:id="@+id/anim_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/animreplace"
                />


        </LinearLayout>


    </RelativeLayout>



</LinearLayout>

