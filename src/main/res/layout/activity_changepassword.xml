<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="jimihua.work.changepassword">

    <EditText
        android:id="@+id/et_oldpassword"
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/etbg_login_pswmain"
        android:ems="10"
        android:gravity="center_vertical|center_horizontal"
        android:hint="请输入旧密码"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/tishikuang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_oldpassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="请勿忘记填写旧密码，否则无法修改"
        android:textColor="#bd0100" />
    <EditText
        android:id="@+id/et_newpassword_two"
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/etbg_login_pswmain"
        android:ems="10"
        android:gravity="center_vertical|center_horizontal"
        android:hint="请再次输入新密码"
        android:inputType="textPassword" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_newpassword_one"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="请输入的密码长度不小于6位"
        android:textColor="#bd0100" />

    <EditText
        android:id="@+id/et_newpassword_one"
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tishikuang"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/etbg_login_pswmain"
        android:ems="10"
        android:gravity="center_vertical|center_horizontal"
        android:hint="请输入新密码"
        android:inputType="textPassword" />


    <Button
        android:id="@+id/btn_changetologin"
        android:layout_below="@+id/et_newpassword_two"
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:background="@drawable/btn_login"
        android:text="修改"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="#FFFFFF" />
</RelativeLayout>
